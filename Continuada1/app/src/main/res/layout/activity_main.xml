<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diga se Ã© RV ou TD: "
        android:textSize="25sp"
        android:translationY="15dp"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_investido"
        android:hint="tipo investido:"
        android:inputType="text"
        android:layout_marginTop="13dp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo"
        />

    <TextView
        android:id="@+id/tv_compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o valor que comprou: "
        android:textSize="25sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_investido"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_compra"
        android:hint="valor investido:"
        android:inputType="text"
        android:layout_marginTop="1dp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_compra"
        />

    <TextView
        android:id="@+id/tv_atual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o valor atual: "
        android:layout_marginTop="8dp"
        android:textSize="25sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/et_compra"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_atual"
        android:hint="valor atual:        "
        android:inputType="numberDecimal"
        android:layout_marginTop="2dp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_atual"
        />

    <TextView
        android:id="@+id/tv_texto_rentabilidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="80dp"
        android:translationX="15dp"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/et_atual"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rentabilidade"
        android:id="@+id/bt_rentabilidade"
        app:layout_constraintTop_toBottomOf="@+id/tv_texto_rentabilidade"
        android:translationX="140dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick"/>



</androidx.constraintlayout.widget.ConstraintLayout>