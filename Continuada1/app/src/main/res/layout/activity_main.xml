<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_tema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o mês que ficou em casa: "
        android:textSize="25sp"
        android:translationY="15dp"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_mes"
        android:hint="Digite o mês aqui"
        android:inputType="text"
        android:layout_marginTop="13dp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_tema"
        />

    <TextView
        android:id="@+id/tv_ficou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite os dias que ficou em casa: "
        android:textSize="25sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_mes"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_ficou"
        android:hint="Digite a presença aqui"
        android:inputType="text"
        android:layout_marginTop="1dp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ficou"
        />

    <TextView
        android:id="@+id/tv_saiu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite os dias que saiu de casa: "
        android:layout_marginTop="8dp"
        android:textSize="25sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/et_ficou"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_saiu"
        android:hint="Digite a falta aqui"
        android:inputType="text"
        android:layout_marginTop="2dp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_saiu"
        />

    <TextView
        android:id="@+id/tv_texto_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="80dp"
        android:translationX="15dp"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/et_saiu"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        app:layout_constraintTop_toBottomOf="@+id/tv_texto_resultado"
        android:translationX="147dp"
        android:layout_marginTop="20dp"
        android:onClick="aoClicar"/>



</androidx.constraintlayout.widget.ConstraintLayout>